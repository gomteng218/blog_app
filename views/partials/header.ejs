<html>
    <head>
        <title>Pil's Blog</title>
        <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.1.8/semantic.min.css">
        <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
    </head>
    <body>
        <div class="ui fixed inverted menu">
            <div class="ui container left">
                <div class="header item"><i class="cloud icon"></i>Pil's Blog</div>
                <a href="/" class="item">Home</a>
                <a href="/blogs/new" class="item">New Post</a>
            </div>
            <div class="ui container">
                <% if(!currentUser){ %>
                 <%#   <a href="/register" class="item right">Register</a> %>
                    <a href="/login" class="item right">Log In</a>
                <% } else { %>
                    <a href="#" class="item right">Signed In As <%= currentUser.username %></a>
                    <a href="/logout" class="item right">Log Out</a>
                <% } %>
            </div>
        </div>
