<% include ./partials/header %>


<div class="ui main text container">
    <div class="ui huge header">Pil's Blog</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= blog.image %>">
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
                        <div class="meta">
                            <span><%= blog.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <% if(typeof blog.content !== "undefined" && blog.content.length > 100) { %>
                                <p><%= blog.content.substring(0,200) %>...</p>
                            <% } else { %>
                                <p><%- blog.content %></p>
                            <% } %>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic blue button" href="/blogs/<%= blog._id %>">
                                Read More
                                <i class="right chevron icon small"></i>
                            </a>
                        </div>
                    </div>                    
                </div>    
            <% }) %>
        </div>
    </div>
</div>





<% include ./partials/footer %>